{
  "name": "@raulscoelho/eslint-config",
  "version": "1.1.3",
  "description": "ESLint configuration used by Raul Semicek Coelho.",
  "author": "Raul Semicek Coelho <raul.s.coelho@gmail.com>",
  "main": "src/index.js",
  "sideEffects": false,
  "files": [
    "dist",
    "next.js",
    "node.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RaulSCoelho/RaulSCoelho.git",
    "directory": "packages/core/eslint-config"
  },
  "scripts": {
    "dev": "yarn build:fast -- --watch",
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
